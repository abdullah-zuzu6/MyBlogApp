<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
  <title>Homepage</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
     <style>
     
      #mainBox{
        background-color:transparent;
        width: 100%;
        height: 100%;
      }
      #card{
       width: 250px;
       height: 210px;
      margin: 20px;
      margin-left: 30px;
      
      }
      .card-img-top{
        width: 100%;
        height: 150px;
      }
      .card-body{
        background-color: rgb(239, 237, 237,0.8);
        color: rgb(30, 28, 28);
      }


/* Responsive behavior */
@media (max-width: 768px) {
  #mainBox {
    flex-direction: column;
    padding: 0.5rem;
  }

  #card {
    width: 100%; /* Cards take up full width on mobile */
  }

  .card {
    width: 100%;
    margin: 0 auto;
  }

  .card-title {
    font-size: 1rem;
  }

  .btn-primary {
    width: 90%;
  }
}

@media (max-width: 480px) {
  .card-title {
    font-size: 0.9rem;
  }

  .btn-primary {
    font-size: 0.9rem;
  }
}
     </style>
 

 
      <div class="row row-cols-4"  id="mainBox">
      <% blogs.forEach(blog => { %>
        <div class="col" id="card">
             <div class="card col" style="width: 18rem; border: 1px solid transparent ">
               <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="...">
               <div class="card-body">
                 <h5 class="card-title"><%= blog.title %></h5>
                 
                 <a href="/blog/<%= blog._id %>" class="btn btn-primary"> view</a>
               </div>
             </div>
         </div>    
      <% }) %>
     </div>

<%- include('./partials/script') %>

<script>
  // Display a welcome alert only once per session
  window.addEventListener('load', () => {
    // Check if the alert has already been shown
    if (!sessionStorage.getItem('welcomeAlertShown')) {
      alert('Welcome to the BlogByZuzu.Go to menu icon make your account and signIn. Then you can add your blogs and comments on Blogs.');
      // Mark the alert as shown
      sessionStorage.setItem('welcomeAlertShown', 'true');
    }
  });
</script>

</body>

</html>